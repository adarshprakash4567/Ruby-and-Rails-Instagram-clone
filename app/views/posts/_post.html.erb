<div id="<%= dom_id post %>" class='post-container'>
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= post.description %>
  </p>

  <p>
    <strong>Keyword:</strong>
    <%= post.keyword %>
  </p>
<p>
      <%= link_to "", post ,class:'post-link'%>
    </p>
</div>
