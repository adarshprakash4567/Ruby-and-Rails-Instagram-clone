<div id="<%= dom_id post %>" class='post-container'>
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= post.description %>
  </p>

  <p>
    <strong>Keyword:</strong>
    <%= post.keyword %>
  </p>
  <p>
    <strong>Email:</strong>
    <%= post.user.email %>
  </p>
<%if user_signed_in? %>
<% like = current_user.likes.find_by(post: post)%>

<% if like.nil? %>
 <%= button_to 'like', likes_path, params: { like: { post_id: post.id }}, method: :post%>
<% else %> 
  <%= button_to 'unlike', like_path(like), method: :delete%>
<%end%>
<%end%>
 <%= post.likes.count%> Likes
  <% post.images.each do |image| %>
    <%= image_tag(image , style:"object-fit :cover; width: 250px; height: 600px;")  %>
  <% end %>



</div>
<p>
      <%= link_to post.user.email, post.user , style:'z-index:';%>
    </p>