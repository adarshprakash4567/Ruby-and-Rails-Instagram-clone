<%= turbo_stream.append :posts do %>
    <% @posts.each do |post| %>
    <% if user_signed_in? %>
    <%= render post%>
    <%end%>
    <%end%>
    <%end%>
<% if @pagy.next.present? %>
<%= turbo_stream.replace :pagination do %>
<%= turbo_frame_tag :paginaton, loading: :lazy, src: posts_path(format: :turbo_stream, page: @pagy.next)%>
<%end%>
<%end%>